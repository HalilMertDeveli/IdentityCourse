@model UserSingInModel

<form asp-action="SingIn" method="post" class="p-3 w-75 mx-auto shadow">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="mb-3">
        <label>Kullanıcı adı:</label>
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control"/>
    </div>

    <div class="mb-3">
        <label>Şifre:</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>

        <input type="password" asp-for="@Model.Password" class="form-control">
    </div>



    <div>

        <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    </div>



</form>